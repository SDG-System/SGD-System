<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Relatórios</title>
    <link rel="stylesheet" href="/css/principal.css" />
    <link rel="stylesheet" href="/css/sidebar.css" />
    <link rel="stylesheet" href="/css/relatorios.css" />
    <%- include('../partials/head') %>
    <script src="/js/Dashboards/index.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>  
  <body>
    <%- include('../partials/sidebar') %>
    <div class="container mt-5">
      <h1 class="text-center">Relatórios e Dashboards</h1>

      <div class="row justify-content-center text-center" style="margin-left: 200px;">
          <!-- Gráfico de Entradas -->
          <div class="col-md-4">
              <div class="card">
                <h3>Entradas de Produtos</h3>
                <canvas id="grafico-entradas"></canvas>
              </div>
          </div>

          <!-- Gráfico de Saídas -->
          <div class="col-md-4">
              <div class="card">
                <h3>Saídas de Produtos</h3>
                <canvas id="grafico-saidas"></canvas>
              </div>
          </div>

          <!-- Gráfico de Baixo Estoque -->
          <div class="col-md-4">
              <div class="card">
                <h3>Produtos com Baixo Estoque</h3>
                <canvas id="grafico-baixo-estoque"></canvas>
              </div>
          </div>
      </div>
    </div>
    <script src="/js/Logout/index.js"></script>
    <script src="/js/Sidebar/index.js"></script>
    <script src="/js/Relatorios/relatorioEntrada.js"></script>
  </body>
</html>
